<SnakePart>:
    size: 40, 40
    canvas.after:
        Color:
            rgb: 0.5, 1, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos

<QrtestHome>:

    FloatLayout:
        orientation: "vertical"
        size: root.size
        pos: root.pos

        KCamera:
            id: qrcam
            size: 50,50

        Widget:
            id: squarepart
            pos: root.center_x, root.center_y
            canvas:
                Color:
                    rgb: 0.5, 1, 0.5, 1
                Rectangle:
                    size: 50,50
                    pos: self.pos





